<%- include('partials/head') %> 

<% if (messages.error) {%>  <!--Flash sets messages variable, passport-config generates error-->
    <%= messages.error %> 
    <% } %> 

<div id="control">
    <div id="box">
        <h1 class="text-center">Login</h1>
        <form action="/login" method="POST" class="form-group text-center">
            <div class="mb-3 container">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="" id="email" name="email" aria-describedby="emailHelp">
            </div>
            <div class="mb-3 container">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="" id="password" name="password">
            </div>
            <a id="passwordForget" href="/passForgot">Forgot password?</a>
            <br>
            <a id="register" href="/register">Register</a>
            <br>
            <br>
            <button id="submit" type="submit" class="btn" >Submit</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %> 